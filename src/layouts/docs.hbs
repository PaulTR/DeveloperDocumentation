<!doctype html>
<html>
<head>
  <meta charset='utf-8'>
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
  <meta name="viewport" content="width=device-width">

  <title>Sphero Docs | {{title}}</title>

  <!-- jQuery -->
  <script src="{{assets}}/js/jquery-1.11.1.min.js"></script>

  <!-- Let me embed vines -->
  <script async src="//platform.vine.co/static/scripts/embed.js" charset="utf-8"></script>

  <!-- Favicon -->
  <link rel="shortcut icon" href="{{assets}}/sphero.ico" type="image/x-icon" />

  <!-- Vendor theme mods -->
  <script src='{{assets}}/js/jquery-styling.js'></script>
  <script src='{{assets}}/js/prettify.js'></script>
  <!-- <script src='{{assets}}/js/scrollspy.js'></script> -->

  <!-- Sphero theme mods -->
  <link href='{{assets}}/css/style.css' rel='stylesheet'>
  <script src='{{assets}}/js/animated-core.js'></script>

  <!-- Meta -->
  <meta content="Sphero" property="og:title">
  <meta content="Documentation for Sphero" name="description">

</head>
<body role='flatdoc'>

  <div id="docs">
    <div class='header'>
      <div class='left'>
        <a href="/">
          <img src="{{assets}}/images/spheromark.png" id="logo">
        </a>
      </div>
      <div class='right'>
        <a href="https://github.com/orbotix/DeveloperResources/tree/initial-site-content" class="icon"><i class="icon ion-social-github"></i></a>
        <a href="https://github.com/orbotix/DeveloperResources/edit/initial-site-content/src/content/{{basename}}.md" class="button">Edit this page</a>
      </div>
    </div>

    <div class='content-root' data-spy="scroll" data-target="#toc">
      <div class='menubar'>
        <div class='menu section' role='flatdoc-menu'>
          <ul>
            {{#withSort pages "data.order"}}
              <li><a href='/{{../platform}}/{{basename}}' class="level-0 {{#compare basename "===" ../basename}}active{{/compare}}">{{data.title}}</a></li>
            {{/withSort}}
          </ul>
        </div>
        <div class='menu section' role='flatdoc-menu'>
          <ul id="toc">
          </ul>
        </div>
      </div>
      <div role='flatdoc-content' class='content'>
        {{#markdown}}
          {{> body}}
        {{/markdown}}
      </div>
    </div>
  </div>

  <!-- Custom -->
  <script src='{{assets}}/js/docs.js'></script>

</body>
</html>
